# Environment Configuration for Phishing Classifier
# Copy this file to .env and customize as needed

# ============================================================================
# Data Configuration
# ============================================================================
PHISHING_CLASSIFIER_DATA__DATA_DIR=data/raw
PHISHING_CLASSIFIER_DATA__PROCESSED_DIR=data/processed
PHISHING_CLASSIFIER_DATA__BATCH_SIZE=32
PHISHING_CLASSIFIER_DATA__NUM_WORKERS=4
PHISHING_CLASSIFIER_DATA__SEED=42

# ============================================================================
# Model Configuration
# ============================================================================
PHISHING_CLASSIFIER_MODEL__BACKBONE=efficientnet_b3
PHISHING_CLASSIFIER_MODEL__EPOCHS=50
PHISHING_CLASSIFIER_MODEL__LEARNING_RATE=0.0001
PHISHING_CLASSIFIER_MODEL__LOSS_TYPE=focal
PHISHING_CLASSIFIER_MODEL__USE_AMP=true

# ============================================================================
# API Configuration
# ============================================================================
PHISHING_CLASSIFIER_API__HOST=0.0.0.0
PHISHING_CLASSIFIER_API__PORT=8000
PHISHING_CLASSIFIER_API__RELOAD=false
PHISHING_CLASSIFIER_API__WORKERS=1
PHISHING_CLASSIFIER_API__MAX_BATCH_SIZE=32

# ============================================================================
# Paths
# ============================================================================
PHISHING_CLASSIFIER_MODELS_DIR=models/checkpoints
PHISHING_CLASSIFIER_RESULTS_DIR=models/results
PHISHING_CLASSIFIER_LOGS_DIR=runs

# ============================================================================
# Device & Performance
# ============================================================================
# Options: auto, cuda, cpu, mps
PHISHING_CLASSIFIER_DEVICE=auto
PHISHING_CLASSIFIER_DETERMINISTIC=true

# ============================================================================
# Logging
# ============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PHISHING_CLASSIFIER_LOG_LEVEL=INFO
# Options: json, console
PHISHING_CLASSIFIER_LOG_FORMAT=console
PHISHING_CLASSIFIER_DEBUG=false

# ============================================================================
# Experiment Tracking
# ============================================================================
PHISHING_CLASSIFIER_EXPERIMENT_NAME=phishing_classifier
PHISHING_CLASSIFIER_TRACK_EXPERIMENTS=true
